{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:2-3.14-trixie",
	"features": {
		"ghcr.io/devcontainers/features/aws-cli:1": {},
		"ghcr.io/customink/codespaces-features/sam-cli": {},
		"ghcr.io/devcontainers/features/docker-in-docker:2.14.0": {
			"moby": false
		},
		"ghcr.io/prulloac/devcontainer-features/pre-commit:1.0.3": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"DavidAnson.vscode-markdownlint",
				"amazonwebservices.aws-toolkit-vscode",
				"ms-azuretools.vscode-containers",
				"ms-vscode-remote.remote-containers",
				"ms-azuretools.vscode-docker",
				"GitHub.copilot-chat",
				"ms-python.vscode-pylance",
				"ms-python.python"
			],
			"mcp": {
        		"servers": {
					"awslabs.core-mcp-server": {
						"command": "uvx",
						"args": ["awslabs.core-mcp-server@latest"],
      					"env": {
       						"FASTMCP_LOG_LEVEL": "ERROR",
        					"aws-foundation": "true",
        					"solutions-architect": "true"
      					}
        			},
					"awslabs.aws-diagram-mcp-server": {
      					"command": "uvx",
      					"args": ["awslabs.aws-diagram-mcp-server"],
      					"env": {
       	 					"FASTMCP_LOG_LEVEL": "ERROR"
      					}
      				},
					"awslabs.code-doc-gen-mcp-server": {
      					"command": "uvx",
      					"args": ["awslabs.code-doc-gen-mcp-server"],
      					"env": {
       	 					"FASTMCP_LOG_LEVEL": "ERROR"
      					}
      				}
				}
			}
		}
	},
	"postCreateCommand": "pre-commit install  --install-hooks"
}
